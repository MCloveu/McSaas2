@using Abp.Authorization.Users
@using McSaas.Web.Models.Common.Modals
@using McSaas
@{
    Layout = null;
}
<div class="modal fade" id="CommunityCreateModal" tabindex="-1" role="dialog" aria-labelledby="CommunityCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewCommunity")))
            <form name="communityCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Name")</label>
                        <div class="col-md-9">
                            <input type="text" name="Name" class="form-control" required maxlength="@AppConsts.MaxCommunityNameLength" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Address")</label>
                        <div class="col-md-9">
                            <input type="text" name="Address" class="form-control" required maxlength="@AbpUserBase.MaxEmailAddressLength" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Area") </label>
                        <div class="col-md-9">
                            <input type="number" name="Area" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("BuildingNumber")</label>
                        <div class="col-md-9">
                            <input type="number" name="BuildingNumber" class="form-control" required >
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("HouseNumber")</label>
                        <div class="col-md-9">
                            <input type="number" name="HouseNumber" class="form-control" required>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
